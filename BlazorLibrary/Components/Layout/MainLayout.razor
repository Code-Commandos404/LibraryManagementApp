@inherits LayoutComponentBase
@attribute [StreamRendering]
@using MudBlazor
<MudThemeProvider @rendermode="InteractiveServer" DefaultScrollbar="true" IsDarkMode="@(true)" />
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudSnackbarProvider Position="SnackbarPosition.BottomRight" />
<div class="page">
    <div>
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
